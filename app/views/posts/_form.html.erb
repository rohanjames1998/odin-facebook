
<dialog data-dialogs-target="dialogBox">
  <%= form_with scope: :post,
                url: posts_path,
                method: :post,
                id: "post_form" do |f| %>
                <%= f.fields_for :text do |text_f| %>
                  <%= text_f.text_field :content %>
                <% end %>
    <%= f.file_field :images,
                      multiple: true,
                      accept: 'image/jpeg,image/png'%>
    <%= f.submit "Post", data: { action: "dialogs#closeDialog" } %>
  <% end %>
</dialog>
